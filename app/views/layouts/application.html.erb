<!DOCTYPE html>
<html>
  <head>
    <title>PhotoRepo</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <h1> Photo Repo </h1>

  <% if logged_in? %>
    <p>Current User: <%= current_user.username %></p>
  <%= link_to "Public Photos", root_path, method: :get%>
  <%= link_to "Upload", '/upload', method: :get%>
  <%= link_to "My Photos", 'user/photos', method: :get%>
  <%= link_to "Logout", sessions_path, method: :delete%>
  <% else %>
  <%= link_to "Public Photos", root_path, method: :get%>
  <%= link_to "Login", 'login', method: :get%>
  <%= link_to "Signup", new_user_path, method: :get%>
  <% end %>

  <body>
    <%= yield %>
  </body>
</html>


